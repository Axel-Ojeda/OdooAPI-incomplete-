<odoo>
  <!-- TREE -->
  <record id="view_sistek_stock_map_tree" model="ir.ui.view">
    <field name="name">sistek.stock.map.tree</field>
    <field name="model">sistek.stock.map</field>
    <field name="arch" type="xml">
      <tree>
        <field name="active"/>
        <field name="name"/>
        <field name="sistek_product_id"/>
        <field name="product_id"/>
        <field name="location_id"/>
        <field name="last_sync"/>
      </tree>
    </field>
  </record>

  <!-- FORM -->
  <record id="view_sistek_stock_map_form" model="ir.ui.view">
    <field name="name">sistek.stock.map.form</field>
    <field name="model">sistek.stock.map</field>
    <field name="arch" type="xml">
      <form string="VinculaciÃ³n Sistek">
        <sheet>
          <group>
            <field name="active"/>
            <field name="name" readonly="1"/>
          </group>
          <group>
            <field name="sistek_product_id"/>
            <field name="product_id"/>
            <field name="location_id"/>
            <field name="last_sync"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- ACTION -->
  <record id="action_sistek_stock_map" model="ir.actions.act_window">
    <field name="name">Vinculaciones Sistek</field>
    <field name="res_model">sistek.stock.map</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
