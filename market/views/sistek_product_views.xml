<odoo>
  <!-- TREE -->
  <record id="view_sistek_product_tree" model="ir.ui.view">
    <field name="name">sistek.product.tree</field>
    <field name="model">sistek.product</field>
    <field name="arch" type="xml">
      <tree>
        <field name="sync_enabled"/>
        <field name="odoo_product_id"/>
        <field name="sistek_location_id"/>

        <field name="item_code"/>
        <field name="item_name"/>
        <field name="brand"/>
        <field name="family_name"/>
        <field name="price"/>
        <field name="stock"/>
        <field name="currency_code"/>
        <field name="last_sync"/>
        <field name="active"/> 
      </tree>
    </field>
  </record>

  <!-- FORM -->
  <record id="view_sistek_product_form" model="ir.ui.view">
    <field name="name">sistek.product.form</field>
    <field name="model">sistek.product</field>
    <field name="arch" type="xml">
      <form string="Producto Sistek">
        <header>
          <!-- BotÃ³n para abrir wizard -->
          <button name="%(action_sistek_link_wizard)d"
                  string="Vincular a Producto Odoo"
                  type="action"
                  class="btn-primary"
                  context="{'default_sistek_product_id': active_id}"/>
        </header>

        <sheet>
          <group>
            <field name="active"/>
            <field name="item_code"/>
            <field name="item_name"/>
            <field name="brand"/>
            <field name="family_code"/>
            <field name="family_name"/>
          </group>

          <group>
            <field name="price"/>
            <field name="stock"/>
            <field name="currency_code"/>
            <field name="last_sync"/>
          </group>

          <notebook>
            <page string="Raw JSON">
              <field name="raw_json" nolabel="1"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- ACTION -->
  <record id="action_sistek_products" model="ir.actions.act_window">
    <field name="name">Productos Sistek</field>
    <field name="res_model">sistek.product</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
