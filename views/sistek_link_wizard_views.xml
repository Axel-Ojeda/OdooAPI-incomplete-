<odoo>
  <record id="view_sistek_link_wizard_form" model="ir.ui.view">
    <field name="name">sistek.link.wizard.form</field>
    <field name="model">sistek.link.wizard</field>
    <field name="arch" type="xml">
      <form string="Vincular producto Sistek">
        <group>
          <field name="sistek_product_id" readonly="1"/>
          <field name="product_id" options="{'no_create': True}"/>
          <field name="location_id" options="{'no_create': True}"/>
        </group>
        <footer>
          <button string="Cancelar" class="btn-secondary" special="cancel"/>
          <button string="Vincular" type="object" name="action_confirm_link" class="btn-primary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_sistek_link_wizard" model="ir.actions.act_window">
    <field name="name">Vincular producto Sistek</field>
    <field name="res_model">sistek.link.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>
